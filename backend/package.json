{
  "name": "schedule-system-backend",
  "version": "1.0.0",
  "description": "排班管理系统后端API服务",
  "main": "src/app.js",
  "scripts": {
    "dev": "nodemon src/app.js",
    "start": "node src/app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .js --fix",
    "format": "prettier --write \"src/**/*.js\"",
    "migrate": "node src/scripts/migrate.js",
    "migrate:up": "node src/scripts/migrate.js up",
    "migrate:down": "node src/scripts/migrate.js down",
    "migrate:force": "node src/scripts/migrate.js force"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "email-templates": "^11.1.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "handlebars": "^4.7.8",
    "helmet": "^7.0.0",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "moment": "^2.30.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.6.0",
    "node-cron": "^3.0.2",
    "nodemailer": "^6.10.1",
    "sequelize": "^6.32.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "winston": "^3.10.0",
    "winston-daily-rotate-file": "^4.7.1",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/node": "^20.5.9",
    "eslint": "^8.49.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.28.1",
    "jest": "^29.6.4",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "supertest": "^6.3.3"
  },
  "keywords": [
    "nodejs",
    "express",
    "mysql",
    "sequelize",
    "schedule",
    "management",
    "api"
  ],
  "author": "Schedule System Team",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/app.js",
      "!src/config/**",
      "!src/migrations/**",
      "!src/seeders/**"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "node_modules/",
      "uploads/",
      "logs/",
      "coverage/",
      "*.test.js"
    ],
    "delay": "1000"
  }
}
